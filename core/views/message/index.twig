{% extends 'templates/layout.twig' %}

{% block content %}
    <h3 class="my-5">Текстовые сообщения</h3>
    <div>
        <a href="{{ path_for('message.create') }}" class="btn btn-success mb-2" role="button">Создать</a>
    </div>
    {% if messages|length %}
        <table class="table table-bordered table-sm table-striped">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Текст сообщения</th>
                    <th>Префикс</th>
                    <th>Порядок</th>
                    <th>Актуальность</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.id }}</td>
                    <td>{{ message.content }}</td>
                    <td>{{ message.prefix }}</td>
                    <td>{{ message.position }}</td>
                    <td class="text-center"><i class="fas {{ message.is_actual ? 'fa-check' : 'fa-times' }}"></i>
                    </td>
                    <td class="text-center"><a href="{{ path_for('message.edit', {'id': message.id}) }}"><i class="fas fa-pencil-alt"></i></a></td>
                </tr>    
            {% endfor %}
            </body>
        </table>        
    {% endif %}
{% endblock %}
