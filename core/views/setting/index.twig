{% extends 'templates/layout.twig' %}

{% block content %}
<h4 class="mb-5">Настройки</h4>
<form action="{{ path_for('setting.edit') }}" method="POST">
    <div class="form-group">
        <div class="form-check">
            <label for="is_chat_alert" class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_chat_alert" id="is_chat_alert" {{ settings.is_chat_alert ? ' checked="checked"' : ''}}>Уведомление об изменении курса
            </label>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-success" id="btn-save" type="submit">Сохранить</button>
    </div>  
    <input type="hidden" name="id" id="id" value="{{ settings.id }}">  
    {{ csrf.field|raw }}
</form>
{% endblock %}