{% extends 'templates/layout.twig' %}

{% block content %}
    <div class="row">
  <div class="col col-lg-4 col-md-6 col-sm-8 mx-auto mt-5">
    <div class="card">
      <div class="card-header">Вход в систему</div>
        <div class="card-body">
            <form action="{{ path_for('user.login') }}" method="POST">
            <div class="form-group">
                <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input class="form-control" id="username"  name="username" type="text" placeholder="Пользователь">
                </div>
            </div> 
            <div class="form-group">
                <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <input class="form-control" id="password" name="password" type="password" placeholder="Пароль">
                </div>
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-dark" type="submit">
                    Вход
                </button>
            </div>
            {{ csrf.field|raw }}
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
