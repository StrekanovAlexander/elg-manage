{% extends 'templates/layout-empty.twig' %}

{% block content %}
    {% if places|length %}
    <form action="{{ path_for('retailrate.index') }}" method="POST" id="retail-rates"> 
        <table class="table table-striped table-sm">
            {% include 'retailrate/partials/_header-rates.twig' %}
            {% include 'retailrate/partials/_rates.twig' %}
        </table>
        {{ csrf.field | raw}} 
        <button class="btn btn-sm btn-primary ml-2 text-uppercase" type="submit">Записать</button>
    </form>
    {% endif %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
{% endblock %}
