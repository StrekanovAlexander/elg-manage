{% extends 'templates/layout.twig' %}

{% block content %}
    <h3 class="my-5">Населенные пункты</h3>
    {% if places|length %}
        <table class="table table-bordered table-sm table-striped">
            <thead>
                <tr class="text-center">
                    <th class="text-left">Наименование</th>
                    <th>Префикс</th>
                    <th>Правила</th>
                    <th colspan="2">Курсы валют</th>
                    <th>Актуальность</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for place in places %}
                <tr class="text-center">
                   <td class="text-left">{{ place.full_name }}</td>
                   <td>{{ place.sign }}</td>
                   <td><a href="{{ path_for('rule.details', {'id': place.id}) }}">Настройка</a></td>
                   <td><a href="{{ path_for('rate.details', {'id': place.id}) }}">Текущие курсы</a></td>
                   <td><a href="{{ path_for('rate.json', {'id': place.id}) }}" target="_blank">JSON</a></td>
                   <td><i class="fas {{ place.is_actual ? 'fa-check' : 'fa-times' }}"></i></td>
                   <td class="text-center"><a href="{{ path_for('place.edit', {'id': place.id}) }}"><i class="fas fa-pencil-alt"></i></a></td>
                </tr>    
            {% endfor %}
            </body>
        </table>        
    {% endif %}
{% endblock %}
