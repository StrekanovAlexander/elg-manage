{% extends 'templates/layout.twig' %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path_for('place.index') }}">Населенные пункты</a></li>
            <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
        </ol>
    </nav>
    <h3 class="my-5">Редактировать населенный пункт: {{ place.full_name }}</h3>
    <form action="{{ path_for('place.edit')}}" method="POST">
        <div class="form-group">
            <label for="place_full_name">Наименование</label>
            <input class="form-control" name="full_name" id="place_full_name" type="text" value="{{ place.full_name }}">
        </div>
        <div class="form-group">
            <label for="sign">Префикс</label>
            <input class="form-control" name="sign" id="sign" type="text" value="{{ place.sign }}">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_bot_active" class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_bot_active" id="is_bot_active" {{ place.is_bot_active ? ' checked="checked"' : ''}} {{ not place.bot_token ? 'disabled' : '' }}
                 >Активность бота
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_actual" class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_actual" id="is_actual" {{ place.is_actual ? ' checked="checked"' : ''}}>Актуальность
                </label>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success" id="btn-save" type="submit">Записать</button>
        </div>
        <input type="hidden" name="id" id="id" value="{{ place.id }}">    
        {{ csrf.field | raw}}
    </form>
{% endblock %}    