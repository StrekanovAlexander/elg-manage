{% extends 'templates/layout.twig' %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path_for('place.index') }}">Населенные пункты</a></li>
            <li class="breadcrumb-item active" aria-current="page">Создание</li>
        </ol>
    </nav>
    <h3 class="my-5">Создать населенный пункт</h3>
    <form action="{{ path_for('place.create')}}" method="POST">
        <div class="form-group">
            <label for="place_full_name">Наименование</label>
            <input class="form-control" name="full_name" id="place_full_name" type="text">
        </div>
        <div class="form-group">
            <label for="sign">Префикс</label>
            <input class="form-control" name="sign" id="sign" type="text">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_actual" class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_actual" id="is_actual">Актуальность
                </label>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success" id="btn-save" type="submit" disabled>Записать</button>
        </div>
        {{ csrf.field | raw}}
    </form>
{% endblock %}    