{% extends 'templates/layout.twig' %}

{% block content %}
    <h3 class="my-5">Базовые курсы валют (Текущие)</h3>
    <div>
    <a href="{{ path_for('base-rate.create') }}" class="btn btn-success mb-2" role="button">Установить новые</a>
    <a href="{{ path_for('rate.send') }}" class="btn btn-primary mb-2 float-right" role="button">Отправить курсы</a>
    </div>
    {% if base_rates|length %}
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="text-center">
                    <th colspan="2">Валюта</th>
                    <th class="text-right">Покупка</th>
                    <th class="text-right">Продажа</th>
                    <th class="text-right">Дельта</th>
                    <th>Дата</th>
                </tr>
            </thead>
            <tbody>
            {% for base_rate in base_rates %}
                <tr class="text-center">
                   <td>{{ base_rate.curr.sign|raw }}</td>
                   <td>{{ base_rate.curr.short_name }}</td>
                   <td class="text-right">{{ base_rate.rate_buy }}</td>
                   <td class="text-right">{{ base_rate.rate_sale }}</td>
                   <td class="text-right">{{ base_rate.steps }}</td>
                   <td>{{ base_rate.created_at|date("d.m.Y H:i:s") }}</td>
                </tr>    
            {% endfor %}
            </body>
        </table>        
    {% endif %}
{% endblock %}
