{% extends 'templates/layout.twig' %}

{% block content %}
    <h3 class="my-5">Базовые курсы валют</h3>
    {% if base_rates|length %}
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Валюта</th>
                    <th>Покупка</th>
                    <th>Продажа</th>
                    <th>Время</th>
                </tr>
            </thead>
            <tbody>
            {% for base_rate in base_rates %}
                <tr>
                   <td>{{ base_rate.curr.short_name }}</td>
                   <td>{{ base_rate.rate_buy }}</td>
                   <td>{{ base_rate.rate_sale }}</td>
                   <td>{{ base_rate.created_at }}</td>
                </tr>    
            {% endfor %}
            </body>
        </table>        
    {% endif %}
    <a href="{{ path_for('base-rate.create') }}" class="btn btn-success btn-sm" role="button">УСТАНОВИТЬ</a>

{% endblock %}
