{% extends 'templates/layout.twig' %}

{% block content %}
     <h3 class="my-5">Установить базовые курсы</h3>
    <form action="#" method="POST">
        <div class="form-group">
            <label for="curr_id">Валюта</label>
            <select class="form-control" name="curr_id" id="curr_id">
              {% for curr in currs %}
                <option value="{{ curr.id }}">{{ curr.short_name }}</option>
              {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="rate_buy">Покупка (оптовый)</label>
            <input class="form-control" name="rate_buy" id="rate_buy" type="number" step="0.01">
        </div>
        <div class="form-group">
            <label for="rate_buy">Дельта</label>
            <input class="form-control" name="steps" id="steps" type="number" value="1">
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-sm" type="submit">ЗАПИСАТЬ</button>
        </div>
        {{ csrf.field | raw}}
    </form>
{% endblock %}    