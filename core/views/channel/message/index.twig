{% extends 'templates/layout.twig' %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path_for('channel.index') }}">Каналы</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ channel.full_name }}</li>
            <li class="breadcrumb-item active" aria-current="page">Сообщения</li>
        </ol>
    </nav>
    <h3 class="my-5">Сообщения в канале: {{ channel.full_name }}</h3>
    <div>
        <a href="{{ path_for('channel.message.create', {'id': channel.id}) }}" class="btn btn-success mb-2" role="button">Создать</a>
    </div>
    {% if channel_messages|length %}
        <table class="table table-bordered table-sm table-striped">
            <tr class="text-center">
                <th class="text-left">Сообщение</th>
                <th>Порядок</th>
                <th>Актуальность</th>
                <th></th>
            </tr>
            {% for channel_message in channel_messages %}
                <tr>
                   <td>{{ channel_message.content }}</td>
                   <td>{{ channel_message.position }}</td>
                   <td class="text-center"><i class="fas {{ channel_message.is_actual ? 'fa-check' : 'fa-times' }}"></i></td>
                   <td class="text-center"><a href="{{ path_for('channel.message.edit', {'id': channel_message.id}) }}"><i class="fas fa-pencil-alt"></i></a></td>
                </tr>    
            {% endfor %}
            </body>
        </table> 
    {% endif %}
{% endblock %}
