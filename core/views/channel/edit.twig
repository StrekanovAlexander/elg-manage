{% extends 'templates/layout.twig' %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path_for('channel.index') }}">Каналы</a></li>
            <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
        </ol>
    </nav>
    <h3 class="my-5">Редактировать канал: {{ channel.place.full_name }}</h3>
    <form action="{{ path_for('channel.edit')}}" method="POST">
        <div class="form-group">
            <label for="dep_full_name">Наименование</label>
            <select class="form-control" name="place_id" id="place_id">
                <option value="{{ channel.place_id }}" selected>{{ channel.place.full_name }}</option>
                {% for place in places %}
                    <option value="{{ place.id }}">{{ place.full_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="url">URL</label>
            <input class="form-control" name="url" id="url" type="text" value="{{ channel.url }}">
        </div>
        <div class="form-group">
            <label for="chat_id">Chat ID</label>
            <input class="form-control" name="chat_id" id="chat_id" type="text" value="{{ channel.chat_id }}">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_main" class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_main" id="is_main" {{ channel.is_main ? ' checked="checked"' : ''}}>Основной
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <label for="is_actual" class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_actual" id="is_actual" {{ channel.is_actual ? ' checked="checked"' : ''}}>Актуальность
                </label>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success" id="btn-save" type="submit">Записать</button>
        </div>
        <input type="hidden" name="id" id="id" value="{{ channel.id }}">    
        {{ csrf.field | raw}}
    </form>
{% endblock %}    