{% extends 'templates/layout.twig' %}

{% block content %}
<h4 class="mb-5">Обслуживание</h4>
  <h5>Очистка данных</h5>
  {{ limit }}
    <form action="{{ path_for('service.clear')}}" method="POST">
        <div class="form-group">
            <label for="base_rates_count">Базовых курсов</label>
            <input class="form-control text-right" name="base_rates_count" id="base_rates_count" type="text" value="{{ baseRatesCount }}" disabled >
        </div>
        <div class="form-group">
            <label for="rates_count">Курсов по отделениям</label>
            <input class="form-control text-right" name="rates_count" id="rates_count" type="text" value="{{ ratesCount }}" disabled >
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">Очистить</button>
        </div>  
        {{ csrf.field | raw}}
    </form>

{% endblock %}